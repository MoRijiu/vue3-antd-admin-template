# EditorConfig 配置文件
# 用于在不同编辑器和 IDE 之间保持一致的编码风格
# https://editorconfig.org

# ==================== 根配置 ====================
# 表示这是最顶层的配置文件
root = true

# ==================== 所有文件的默认配置 ====================
[*]
# 字符集
charset = utf-8

# 缩进风格：空格
indent_style = space

# 缩进大小
indent_size = 2

# 换行符：LF（Unix 风格）
end_of_line = lf

# 文件末尾插入新行
insert_final_newline = true

# 删除行尾空格
trim_trailing_whitespace = true

# ==================== Markdown 文件配置 ====================
[*.md]
# Markdown 文件保留行尾空格（用于换行）
trim_trailing_whitespace = false

# ==================== Makefile 配置 ====================
[Makefile]
# Makefile 必须使用制表符
indent_style = tab

# ==================== YAML 文件配置 ====================
[*.{yml,yaml}]
# YAML 文件使用 2 个空格缩进
indent_size = 2

# ==================== JSON 文件配置 ====================
[*.json]
# JSON 文件使用 2 个空格缩进
indent_size = 2

# ==================== Python 文件配置 ====================
[*.py]
# Python 文件使用 4 个空格缩进
indent_size = 4

# ==================== Go 文件配置 ====================
[*.go]
# Go 文件使用制表符
indent_style = tab

